<div class="first-view">
  <div class="catchcopy">
    <p class="main-copy">「好き」を知れば、会話は広がる。</p>
    <p class="sub-copy">　チームビルディング支援アプリ <span>Mates</span></p>
  </div>

  <div class="login-form">
    <h2 class="title">SIGN UP</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class:"text-field", required: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class:"text-field", required: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"text-field", required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"text-field", required: true %>
      </div>

      <div class="actions">
        <%= f.submit "サインアップ", class:"submit-button" %>
      </div>
    <% end %>
    <div class="options">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>