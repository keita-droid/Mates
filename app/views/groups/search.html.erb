<%= form_with url: search_groups_path, method: :get, local: true, class: "search-form" do |f| %>
  <%= f.search_field :keyword, placeholder: "グループをさがす", size: 25, class: "form" %>
  <%= f.submit "検索", class: "btn" %>
<% end %>

<div class="wrapper card__contents flexBox">
<% @groups.each do |group| %>
  <%= link_to group_path(group), class: "search member-card card__block col-xs-12 col-md col-lg col-xl" do %>
    <div class="member-header">
      <div class="profile">
        <div class="name"><%= group.name %></div>
        <div class="status"><%= group.description %></div>
      </div>
    </div>
  <% end %>
<% end %>
</div>