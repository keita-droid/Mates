<div class="inputBox">
  <h2>グループをつくる</h2>
  <%= form_with model: @group, url:{ controller: 'groups', action: 'create'}, local: true do |f| %>
    <div class="field">
      <%= f.label :name, "グループ名（必須）" %><br/>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :description, "概要説明（任意）" %><br/>
      <%= f.text_area :description, size: "25x3" %>
    </div>
    <div class="field">
      <%= f.label :public, "グループ検索" %><%= fa_icon "question-circle", class: "info", id: "info" %><br/>
      <div class="info-text" id="info-text"><span>表示にすると参加リクエストができるようになります。非表示の場合はメンバーによる招待制です。</span></div>
      <div class="radio">
        <%= f.radio_button :public, true %>表示
      </div>
      <div class="radio">
        <%= f.radio_button :public, false, checked: true %>非表示
      </div>
    </div>
    <div class="actions">
      <%= f.submit "作成" %>
    </div>
  <% end %>
</div>