<%= form_with url: search_users_path, method: :get, local: true, class: "search-form" do |f| %>
  <%= f.search_field :keyword, placeholder: "name", class: "form" %>
  <%= f.submit "検索", class: "btn" %>
<% end %>

<div class="wrapper card__contents flexBox">
<% @users.each do |user| %>
  <%= link_to user_path(user), class: "search member-card card__block col-xs-12 col-md col-lg col-xl" do %>
    <div class="member-header">
      <div class="image">
        <% if user.image.attached? %>
          <div style="background-image:url(<%= rails_blob_path(user.image) %>)"></div>
        <% else %>
          <div class="no-image"></div>
        <% end %>
      </div>
      <div class="profile">
        <div class="name"><%= user.name %></div>
        <div class="status"><%= user.status %></div>
      </div>
    </div>
  <% end %>
<% end %>
</div>