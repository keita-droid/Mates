<div class="inputBox">
  <h2>投稿を編集</h2>
  <%= form_with model: @post, local: true do |f| %>
    <div class="field">
      <%= f.label :genre_id, "ジャンル" %><br/>
      <%= f.collection_select :genre_id, @genres, :id, :name, selected: @post.genre_id %>
    </div>
    <div class="field">
      <%= f.label :text, "わたしの好きなもの" %><br/>
      <%= f.text_area :text, size: "30x3,", placeholder: "（例）ガツンゴールド最強！！", value: @post.text %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="actions">
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>
</div>