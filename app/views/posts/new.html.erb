<div class="inputBox">
  <h2>新規投稿</h2>
  <%= form_with model: @post, local: true do |f| %>
    <div class="field">
      <%= f.label :genre_id, "ジャンル" %><br/>
      <%= f.collection_select :genre_id, @genres, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :text, "わたしの好きなもの" %><br/>
      <%= f.text_area :text, size: "30x3,", placeholder: "（例）ガツンゴールド最強！！" %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="actions">
      <%= f.submit "作成" %>
    </div>
  <% end %>
</div>